<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RatGame.LevelSelect">
   <top>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="LEVELS" BorderPane.alignment="CENTER">
         <font>
            <Font size="44.0" />
         </font>
      </Text>
   </top>
   <center>
      <VBox fx:id="LevelButtons" alignment="CENTER" prefHeight="500.0" prefWidth="1000.0" spacing="10.0" style="-fx-background-color: green;" stylesheets="@../../css/css.css" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <Button fx:id="back" mnemonicParsing="false" onAction="#switchToMainMenu" text="Back" BorderPane.alignment="TOP_CENTER" />
   </bottom>
   <right>
      <VBox fx:id="LeaderboardButtons" prefHeight="500.0" prefWidth="298.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="LEADERBOARDS">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <Text fx:id="top10" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="RIGHT" BorderPane.alignment="BOTTOM_RIGHT" />
               </center>
            </BorderPane>
         </children>
      </VBox>
   </right>
</BorderPane>
